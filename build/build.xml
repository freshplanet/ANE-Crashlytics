<?xml version="1.0" encoding="UTF-8"?>
<project name="Air Native Extension Build Scripts" default="all">

    <!-- Config -->
    <property file="build.config"/>

    <!-- Load ant-contrib -->
    <taskdef resource="net/sf/antcontrib/antcontrib.properties">
        <classpath>
            <pathelement location="ant-contrib-0.6.jar"/>
        </classpath>
    </taskdef>

    <!-- All -->
    <target name="all" depends="ios,android,swc,package" description="Full build of extension"/>

    <!-- iOS -->
    <target name="ios" description="Build iOS Library">

        <!-- make the build directory for the objc code -->
        <mkdir dir="temp/ios"/>

        <!-- clean the build -->
        <exec executable="xcodebuild" failonerror="true" dir="../ios">
            <arg line="-workspace ${name}.xcworkspace"/>
            <arg line="-scheme ${name}"/>
            <arg line="clean"/>
        </exec>

        <!-- compile the ios lib -->
        <exec executable="xcodebuild" failonerror="true" dir="../ios">
            <arg line="-workspace ${name}.xcworkspace"/>
            <arg line="-scheme ${name}"/>
            <arg line="-sdk iphoneos"/>
            <arg line="-configuration Release"/>
            <arg line="SYMROOT=$(PWD)/../ios/build"/>
        </exec>

        <!-- copy the libs and resources to the base temp ios directory -->
        <copy todir="temp/ios" overwrite="true" includeEmptyDirs="false" flatten="false">
            <fileset dir="../ios/build/Release-iphoneos/">
                <exclude name="**/Pods_${name}.framework/**"/>
                <exclude name="**/GoogleUtilities/**"/>
                <exclude name="**/XCFrameworkIntermediates/**"/>
            </fileset>
        </copy>

        <!-- copy over necessary frameworks, bundles, etc -->
        <for param="path">
            <path>
                <dirset dir="../ios/">
                    <include name="**/*.framework"/>
                    <include name="**/*.bundle"/>
                    <exclude name="**/Pods_${name}.framework/**"/>
                    <exclude name="**/FBLPromises*"/>
                    <exclude name="**/GoogleUtilities/**"/>
                </dirset>
            </path>
            <sequential>
                <propertyregex property="folder.name" override="true" input="@{path}" regexp=".+\/(.+)" select="\1"/>
                <copy todir="temp/ios/${folder.name}" overwrite="true" includeEmptyDirs="false" flatten="false">
                    <fileset dir="@{path}"/>
                </copy>
            </sequential>
        </for>

        <!-- shenanigans with dynamic frameworks  -->
        <delete dir="../bin/Frameworks"/>

        <delete dir="temp/ios/FirebaseAnalytics.framework/Versions" />
        <delete dir="temp/ios/GoogleAppMeasurement.framework/Versions" />
        <delete dir="temp/ios/GoogleAppMeasurementIdentitySupport.framework/Versions" />

        <copy todir="../bin/Frameworks/FirebaseCore.framework" >
            <fileset dir="temp/ios/FirebaseCore.framework" includes="**/**" />
        </copy>
        <delete dir="temp/ios/FirebaseCore"/>

        <copy todir="../bin/Frameworks/FirebaseCoreExtension.framework" >
            <fileset dir="temp/ios/FirebaseCoreExtension.framework" includes="**/**" />
        </copy>
        <delete dir="temp/ios/FirebaseCoreExtension"/>

        <copy todir="../bin/Frameworks/FirebaseCoreInternal.framework" >
            <fileset dir="temp/ios/FirebaseCoreInternal.framework" includes="**/**" />
        </copy>
        <delete dir="temp/ios/FirebaseCoreInternal"/>

        <copy todir="../bin/Frameworks/FirebaseCrashlytics.framework" >
            <fileset dir="temp/ios/FirebaseCrashlytics.framework" includes="**/**" />
        </copy>
        <delete dir="temp/ios/FirebaseCrashlytics"/>

        <copy todir="../bin/Frameworks/FirebaseInstallations.framework" >
            <fileset dir="temp/ios/FirebaseInstallations.framework" includes="**/**" />
        </copy>
        <delete dir="temp/ios/FirebaseInstallations"/>

        <copy todir="../bin/Frameworks/FirebaseMessaging.framework" >
            <fileset dir="temp/ios/FirebaseMessaging.framework" includes="**/**" />
        </copy>
        <delete dir="temp/ios/FirebaseMessaging"/>

        <copy todir="../bin/Frameworks/FirebaseRemoteConfigInterop.framework" >
            <fileset dir="temp/ios/FirebaseRemoteConfigInterop.framework" includes="**/**" />
        </copy>
        <delete dir="temp/ios/FirebaseRemoteConfigInterop"/>

        <copy todir="../bin/Frameworks/FirebaseSessions.framework" >
            <fileset dir="temp/ios/FirebaseSessions.framework" includes="**/**" />
        </copy>
        <delete dir="temp/ios/FirebaseSessions"/>

        <copy todir="../bin/Frameworks/GoogleDataTransport.framework" >
            <fileset dir="temp/ios/GoogleDataTransport.framework" includes="**/**" />
        </copy>
        <delete dir="temp/ios/GoogleDataTransport"/>

        <copy todir="../bin/Frameworks/nanopb.framework" >
            <fileset dir="temp/ios/nanopb.framework" includes="**/**" />
        </copy>
        <delete dir="temp/ios/nanopb"/>

        <copy todir="../bin/Frameworks/Promises.framework" >
            <fileset dir="temp/ios/Promises.framework" includes="**/**" />
        </copy>
        <delete dir="temp/ios/PromisesObjC"/>
        <delete dir="temp/ios/PromisesSwift"/>

        <!-- remove the build directory -->
        <delete dir="../ios/build/"/>
    </target>

    <!-- Android -->
    <target name="android" description="Build Android Library">

        <!-- paths -->
        <property name="build.intermediates" value="../android/lib/build/intermediates"/>
        <property name="build.release" value="${build.intermediates}/packaged-classes/release"/>

        <!-- make the build directory -->
        <mkdir dir="temp/android"/>

        <exec executable="/usr/libexec/java_home" outputproperty="java.home">
            <!-- <arg line="-v 1.8" /> -->
        </exec>

        <!-- clean the build -->
        <exec executable="./gradlew" dir="../android">
            <env key="JAVA_HOME" path="${java.home}"/>
            <env key="ANDROID_HOME" path="${android.sdk.home}"/>
            <arg line="clean"/>
        </exec>

        <!-- compile the java code -->
        <exec executable="./gradlew" dir="../android">
            <env key="JAVA_HOME" path="${java.home}"/>
            <env key="ANDROID_HOME" path="${android.sdk.home}"/>
            <arg line=":lib:assembleRelease"/>
        </exec>

        <!-- get the jar -->
        <copy file="${build.release}/classes.jar" tofile="temp/android/lib${name}.jar"/>

        <!-- Copy dependencies into temp folder -->
        <exec executable="./gradlew" dir="../android">
            <env key="JAVA_HOME" path="${java.home}"/>
            <env key="ANDROID_HOME" path="${android.sdk.home}"/>
            <arg line="copyDependencies"/>
        </exec>

        <!-- Extract aar files -->
        <foreach target="unzipAAR" param="aarFile">
            <fileset dir="../android/lib/dependencies">
                <include name="*.aar"/>
            </fileset>
        </foreach>

        <!-- Copy to build folder -->
        <copy todir="temp/android">
            <fileset dir="../android/lib/dependencies" excludes="FlashRuntimeExtensions.jar, runtimeClasses.jar">
                <include name="*.jar"/>
            </fileset>
        </copy>

        <!-- Copy over required resources -->
        <copy todir="temp/android/crash-res" failonerror="true">
            <fileset dir="${build.intermediates}/packaged_res/release"/>
        </copy>

        <delete dir="../android/lib/dependencies"/>

    </target>

    <target name="unzipAAR">
        <basename property="aarFileName" file="${aarFile}"
                  suffix=".aar"/>
        <unzip src="${aarFile}" dest="../android/lib/dependencies/${aarFileName}" overwrite="true"/>
        <if>
            <available file="../android/lib/dependencies/${aarFileName}/classes.jar"/>
            <then>
                <move file="../android/lib/dependencies/${aarFileName}/classes.jar" tofile="../android/lib/dependencies/${aarFileName}.jar"/>
            </then>
        </if>
    </target>

    <!-- Actionscript -->
    <target name="swc" description="Build SWC library">
        <mkdir dir="temp/swc/content/"/>

        <fileset dir="../actionscript/src" casesensitive="yes" id="classfiles">
            <include name="**/*.as"/>
        </fileset>

        <pathconvert property="classlist" refid="classfiles" pathsep=" " dirsep=".">
            <regexpmapper from=".*src.(.*)\.as" to="\1"/>
        </pathconvert>

        <exec executable="${air.sdk.home}/bin/compc" failonerror="true">
            <env key="AIR_SDK_HOME" value="${air.sdk.home}"/>
            <arg line='-source-path ../actionscript/src'/>
            <arg line='-output temp/swc/${name}.swc'/>
            <arg line='-swf-version=25'/>
            <arg line='-external-library-path+="${air.sdk.home}/frameworks/libs/air/airglobal.swc"'/>
            <arg line='-include-classes ${classlist}'/>
        </exec>

        <unzip src="temp/swc/${name}.swc" dest="temp/swc/content" overwrite="true"/>

        <copy file="temp/swc/content/library.swf" todir="temp/ios" overwrite="true"/>
        <copy file="temp/swc/content/library.swf" todir="temp/ios-simulator" overwrite="true"/>
        <copy file="temp/swc/content/library.swf" todir="temp/android" overwrite="true"/>
        <copy file="temp/swc/content/library.swf" todir="temp/default" overwrite="true"/>
    </target>

    <!-- Package -->
    <target name="package" description="Create the extension package">
        <exec executable="${air.sdk.home}/bin/adt" failonerror="true" dir="temp/">
            <arg value="-package"/>
            <arg value="-target"/>
            <arg value="ane"/>
            <arg value="${name}.ane"/>
            <arg value="../extension.xml"/>
            <arg line="-swc swc/${name}.swc"/>
            <arg line="-platform iPhone-ARM -platformoptions ../platform-ios.xml -C ios/ . "/>
            <arg line="-platform Android-ARM -platformoptions ../platform-android.xml -C android/ ."/>
            <arg line="-platform Android-ARM64 -platformoptions ../platform-android.xml -C android/ ."/>
            <arg line="-platform Android-x86 -platformoptions ../platform-android.xml -C android/ ."/>
            <arg line="-platform default -C default/ ."/>
        </exec>

        <move file="temp/${name}.ane" todir="../bin"/>
        <delete dir="temp"/>
    </target>

</project>
